{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noEmit": true,                       // ✅ required to use allowImportingTsExtensions
    "allowImportingTsExtensions": true     // ✅ now valid
  },
  "include": ["src"]
}
